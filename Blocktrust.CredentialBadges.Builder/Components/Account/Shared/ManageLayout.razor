@inherits LayoutComponentBase
@layout AccountLayout

<div class="max-w-6xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Manage Your Account</h1>

    <div class="bg-white border border-gray-300 rounded-lg shadow-sm overflow-hidden">
        <div class="p-6 bg-gray-50 border-b border-gray-300">
            <h2 class="text-xl font-semibold text-gray-700">Change your account settings</h2>
        </div>
        
        <div class="md:flex">
            <div class="md:w-1/4 border-r border-gray-300">
                <div class="p-4">
                    <ManageNavMenu/>
                </div>
            </div>
            <div class="md:w-3/4">
                <div class="p-6">
                    @Body
                </div>
            </div>
        </div>
    </div>
</div>