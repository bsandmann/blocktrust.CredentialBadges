<div class="max-w-2xl mx-auto px-4 py-8">
    <StatusMessage Message="@StatusMessage"/>
    
    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Recovery Codes</h2>
    
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-6" role="alert">
        <p class="font-bold mb-2">Put these codes in a safe place.</p>
        <p>
            If you lose your device and don't have the recovery codes you will lose access to your account.
        </p>
    </div>
    
    <div class="bg-white border border-gray-300 rounded-lg shadow-sm p-6">
        <div class="grid grid-cols-2 gap-4">
            @foreach (var recoveryCode in RecoveryCodes)
            {
                <div class="bg-gray-100 rounded p-2 text-center">
                    <code class="recovery-code text-sm font-mono">@recoveryCode</code>
                </div>
            }
        </div>
    </div>
    
    <div class="mt-6 text-center">
        <button onclick="window.print()" class="bg-slate-700 text-white px-4 py-2 rounded hover:bg-slate-600 transition duration-200">
            Print Recovery Codes
        </button>
    </div>
</div>

@code {
    [Parameter] public string[] RecoveryCodes { get; set; } = [];

    [Parameter] public string? StatusMessage { get; set; }
}