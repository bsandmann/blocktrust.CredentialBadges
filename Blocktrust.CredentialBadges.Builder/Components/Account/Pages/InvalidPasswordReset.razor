@page "/Account/InvalidPasswordReset"

<PageTitle>Invalid Password Reset</PageTitle>

<div class="max-w-md mx-auto px-4 py-8">
    <h1 class="text-2xl font-semibold text-gray-800 mb-6">Invalid Password Reset</h1>
    
    <div class="bg-white border border-gray-300 rounded-lg p-6 shadow-sm">
        <div class="flex items-center mb-4">
            <span class="material-symbols-outlined text-red-500 mr-2">error</span>
            <p class="text-lg text-gray-700 font-medium">Error</p>
        </div>
        <p class="text-gray-600 mb-4">
            The password reset link is invalid or has expired.
        </p>
        <p class="text-gray-600">
            Please try resetting your password again or contact support if you continue to experience issues.
        </p>
    </div>
    
    <div class="mt-6 flex justify-center space-x-4">
        <a href="/Account/ForgotPassword" class="text-slate-600 hover:text-slate-800 underline">Reset Password</a>
        <span class="text-gray-300">|</span>
        <a href="/" class="text-slate-600 hover:text-slate-800 underline">Return to Home</a>
    </div>
</div>