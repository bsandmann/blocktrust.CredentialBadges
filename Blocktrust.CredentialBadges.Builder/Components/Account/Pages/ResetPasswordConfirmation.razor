@page "/Account/ResetPasswordConfirmation"
<PageTitle>Reset Password Confirmation</PageTitle>

<div class="max-w-md mx-auto px-4 py-8">
    <h1 class="text-2xl font-semibold text-gray-800 mb-6">Reset Password Confirmation</h1>
    
    <div class="bg-white border border-gray-300 rounded-lg p-6 shadow-sm">
        <div class="flex items-center mb-4">
            <span class="material-symbols-outlined text-green-500 mr-2">check_circle</span>
            <p class="text-lg text-gray-700 font-medium">Password Reset Successful</p>
        </div>
        
        <p class="text-gray-600 mb-6">
            Your password has been successfully reset. You can now use your new password to log in to your account.
        </p>
        
        <a href="Account/Login" class="inline-block w-full text-center bg-slate-700 text-white px-4 py-2 rounded hover:bg-slate-600 transition duration-200">
            Log In
        </a>
    </div>
    
    <div class="mt-6 text-center">
        <a href="/" class="text-slate-600 hover:text-slate-800 underline">Return to Home</a>
    </div>
</div>