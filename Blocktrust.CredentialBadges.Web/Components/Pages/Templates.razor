@page "/templates"
@rendermode InteractiveServer


<style>
    /* Common Styles */
    .credential-container {
        width: 30rem;
        border: 1px solid #e2e8f0;
        border-radius: 0.5rem;
        font-family: 'Poppins', sans-serif;
        padding: 1rem;
        margin-bottom: 2rem;
        background: #F8FAFC;
        
    }

    .credential-header {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
    }

    .credential-logo {
        width: 7rem;
        height: 7rem;
        flex-shrink: 0;
        background-color: #ffffff;
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .credential-details {
        flex-grow: 1;
    }

    .credential-title {
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        line-height: 1.5;
    }

    .credential-subtitle {
        color: #718096;
        font-size: 0.875rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .credential-description {
        font-size: 0.875rem;
        margin-bottom: 1rem;
    }

    .credential-validity {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: 0.25rem;
    }

    .credential-validity-label {
        color: #718096;
        font-size: 0.75rem;
        font-weight: 400;
    }

    .credential-validity-date {
        color: #2d3748;
        font-size: 0.875rem;
        font-weight: 500;
        margin-left: 0.25rem;
    }

    .credential-button {
        background-color: #334155;
        color: #ffffff;
        padding: 0.375rem 0.75rem;
        border-radius: 0.25rem;
        display: flex;
        align-items: center;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .credential-verified-icon {
        font-size: 1.25rem;
        margin-right: 0.25rem;
    }

    .credential-verified-text {
        font-size: 0.875rem;
    }

    /* Dark Mode Specific Styles */
    .dark-theme {
        background-color: #020617;
        color: #F1F5F9;
    }

    .dark-logo {
        background-color: #4a5568;
    }

    .dark-title {
        color: #ffffff;
    }

    .dark-subtitle {
        color: #cbd5e0;
    }

    .dark-description {
        color: #e2e8f0;
    }

    .dark-validity-label {
        color: #94A3B8;
    }

    .dark-validity-date {
        color: #ffffff;
    }

    .dark-verified-button {
        background-color: #718096;
    }
    
    .credential-verified-icon-dark {
        color: #0F172A;
    }
    
    .credential-verified-text-dark {
        color: #0F172A;
    }
</style>


<!-- Importing Material Icons font -->
